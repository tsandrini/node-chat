<html>
    <head>
        <title>
            {{ title }}
        </title>
        <link href="/css/chat.css" rel="stylesheet" type="text/css">
        </link>
    </head>
    <body>
        <section id="welcome-form" style="display: none;">
            <div class="nickname">
                <form action="">
                    <input type="text" name="nickname" placeholder="Vaše přezdívka...">
                </form>
            </div>
        </section>
        <section id="chat">
            <ul id="messages">
            </ul>
            <form action="">
                <input autocomplete="off" id="m"/ autofocus>
                <button>
                    Odeslat
                </button>
            </form>
        </section>
    </body>
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/js/functions.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script type="text/javascript" src="/js/chat.js"></script>
</html>